    "version": "0.2.0",
    "configurations": [


        
        {
            "name": "auto",
            "type": "auto-debug",
            "request": "launch",
            "map": {
                "*.luau": "Debug Lua Interpreter"
            }
        },
        
        {
            "name": "Debug Lua Interpreter",
            "type": "lua-local",
            "request": "launch",
            "program": {
                "command": "lune"
            },
            "args": ["run", "${relativeFile}"]
        },
        {
            "name": "Debug Custom Lua Environment",
            "type": "lua-local",
            "request": "launch",
            "program": {
                "command": "lune run"
            },
            "args": []
        }
    ]
}